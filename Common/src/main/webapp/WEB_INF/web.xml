<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>task1</servlet-name>
        <servlet-class>servlets.task1.SumCalculatingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>task1</servlet-name>
        <url-pattern>/task1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>task3</servlet-name>
        <servlet-class>servlets.task3.CalculationStarter</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>task3</servlet-name>
        <url-pattern>/task3</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>pages/start.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>